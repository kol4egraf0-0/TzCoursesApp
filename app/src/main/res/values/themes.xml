<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.CourseAppEM" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:background">@color/blackbg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@color/blackbg</item>
        <item name="materialButtonStyle">@style/AppButtonGreen</item>
    </style>
    <style name="AppButtonGreen" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>
    <style name="AppEditTextGray" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@drawable/rounded_edittext_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_for_edittext</item>
    </style>
    <style name="DividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@color/gray_for_edittext</item>
    </style>
    <style name="AppTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.CourseAppEM" parent="Base.Theme.CourseAppEM" />
</resources>